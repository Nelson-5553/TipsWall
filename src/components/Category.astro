---
import { fetchFromApi } from '../lib/api/api';
const result = await fetchFromApi('api/categories');
const category = result.data;

interface Category {
  id: number;
  name: string;
}

---


      <select id="category_id" name="category_id" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-purple-500 focus:border-purple-500 p-2">
        <option value="" disabled selected>Selecciona una categor√≠a</option>
      {category.map((categories: Category) => (
                <option value={categories.id}>{categories.name}</option>
      ))}
            </select>
 
