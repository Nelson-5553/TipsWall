---
import { fetchFromApi } from '../lib/api';
const result = await fetchFromApi('api/categories');
const category = result.data;
---

<h1>
    <div class="flex flex-row space-x-2 overflow-x-auto">
    {category.map((categories: { name: unknown; })=>(
    <div class="bg-white w-48 py-2 px-3 rounded-full border-2">
      <h1 class="text-lg text-center font-sans">
       {categories.name}
       </h1>
    </div>
    ))}
    </div>
</h1>   