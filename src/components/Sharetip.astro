<div class="w-full h-auto bg-white rounded-b-xl p-6">
    <form action="" method="POST" class="space-y-4">
        <div class="mb-4">
            <label for="post_name" class="block text-sm font-medium text-gray-700">Nombre del consejo</label>
            <input type="text" id="post_name" name="post_name" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-purple-500 focus:border-purple-500 p-2" placeholder="Escribe el nombre de tu consejo aquí...">
        </div>
        <div class="mb-4">
            <label for="content" class="block text-sm font-medium text-gray-700">Contenido del consejo</label>
            <textarea id="content" name="content" rows="4" required maxlength="500" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-purple-500 focus:border-purple-500 p-2" placeholder="Escribe el contenido de tu consejo aquí..."></textarea>
            <div class="text-right text-sm text-gray-500 mt-1">
                <span id="charCount">500</span> caracteres restantes
              </div>
        </div>
        <div class="mb-4">
            <label for="category" class="block text-sm font-medium text-gray-700">Categoría</label>
            <select id="category" name="category" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-purple-500 focus:border-purple-500 p-2">
                <option value="" disabled selected>Selecciona una categoría</option>
                <option value="Salud">Salud</option>
                <option value="Tecnología">Tecnología</option>
                <option value="Estilo de vida">Estilo de vida</option>
                <option value="Educación">Educación</option>
                <option value="Finanzas">Finanzas</option>
            </select>
        </div>
        <div class="flex justify-end mt-4">
        <button type="submit" class="w-auto bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white rounded-full px-4 py-2 shadow-lg flex items-center gap-2 transform transition-transform hover:scale-105">
            Compartir consejo
        </button>
        </div>
    </form>
</div>
</div>
<script src="../lib/utils/CountWords.js"></script>