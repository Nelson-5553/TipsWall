---
import { Lightbulb, Star } from "@lucide/astro"
import { fetchFromApi } from '../lib/api';
import { API_HOST_HOME } from "astro:env/server";

const posts = await fetchFromApi(API_HOST_HOME);
const post = posts.data[0];
---

<div class="relative">
    <div class="absolute -top-6 -left-6 w-24 h-24 bg-yellow-100 rounded-lg z-0"></div>
    <div class="absolute -bottom-6 -right-2 sm:-right-6 w-24 h-24 bg-purple-100 rounded-lg z-0"></div>
    <div class="relative z-10 bg-white p-6 rounded-xl shadow-lg">
      <div class="flex items-center space-x-2 mb-4">
        <Lightbulb class="h-6 w-6 text-yellow-500" />
        <h2 class="text-xl font-bold text-gray-900">{post.post_name}</h2>
      </div>
      <p class="text-gray-700 mb-6">
        {post.excerpt}
      </p>
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-1">
          <Star class="h-4 w-4 fill-yellow-400 text-yellow-400" />
          <Star class="h-4 w-4 fill-yellow-400 text-yellow-400" />
          <Star class="h-4 w-4 fill-yellow-400 text-yellow-400" />
          <Star class="h-4 w-4 fill-yellow-400 text-yellow-400" />
          <Star class="h-4 w-4 fill-yellow-400 text-yellow-400" />
        </div>
        <span class="text-sm text-gray-500">{post.published_at}</span>
      </div>
    </div>
  </div>