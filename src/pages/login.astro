---
import LoginLayout from "../layouts/LoginLayout.astro"
---

<LoginLayout>
    
    <div class="bg-white/80 backdrop-blur-md rounded-2xl shadow-xl p-8 w-full max-w-lg">
        <div class="text-center mb-8">
          <a
            href="/"
            class="inline-flex items-center gap-2 text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-500"
          >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-lightbulb-icon lucide-lightbulb"><path d="M15 14c.2-1 .7-1.7 1.5-2.5 1-.9 1.5-2.2 1.5-3.5A6 6 0 0 0 6 8c0 1 .2 2.2 1.5 3.5.7.7 1.3 1.5 1.5 2.5"/><path d="M9 18h6"/><path d="M10 22h4"/></svg>

            <span>TipsWall</span>
          </a>
          <h1 class="text-2xl font-bold mt-4 text-gray-800">Iniciar sesión</h1>
          <p class="text-gray-600 mt-2">Accede a tu cuenta para compartir consejos</p>
        </div>
      
        <form id="loginForm" class="space-y-5">
          <div class="flex flex-col space-y-2">
            <label for="email">Correo electrónico</label>
            <input
              id="email"
              type="email"
              name="email"
              placeholder="tu@ejemplo.com"
              required
              class="h-12 p-2 rounded-lg border-2 border-purple-500 focus:border-purple-500 focus:ring-purple-500"
            />
          </div>
      
          <div class="space-y-2">
            <div class="flex items-center justify-between">
              <label for="password">Contraseña</label>
              <a
                href="/forgot-password"
                class="text-sm text-purple-600 hover:text-purple-800 hover:underline"
              >
                ¿Olvidaste tu contraseña?
              </a>
            </div>
            <div class="relative">
              <input
                id="password"
                type="password"
                name="password"
                placeholder="••••••••"
                required
                class="h-12 p-2 w-full rounded-lg border-2 border-purple-500 focus:border-purple-500 focus:ring-purple-500 pr-10"
              />
        
            </div>
          </div>
      <br><br>
          <!-- <div class="flex items-center space-x-2">
            <input type="checkbox" id="remember" />
            <label for="remember" class="text-sm font-normal cursor-pointer">
              Recordar mi sesión
            </label>
          </div> -->
      
          <button
            type="submit"
            class="w-full h-12 bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white rounded-lg"
          >
            Iniciar sesión
          </button>
      
      
      
          <div class="text-center mt-6">
            <p class="text-sm text-gray-600">
              ¿No tienes una cuenta?
              <a href="/register" class="text-purple-600 hover:text-purple-800 hover:underline">
                Regístrate
              </a>
            </p>
          </div>
        </form>
      </div>
      
    
</LoginLayout>

  
  <script src="../js/login.js"></script> 
  