---
import Layout from "../layouts/Layout.astro";
import Category from "../components/Category.astro";
import Tips from "../components/Tips.astro";
import Addtip from "../components/Addtip.astro";
const skeletonCount = 9;

---

<Layout>
  <div class="flex flex-row justify-center items-center min-h-screen p-6">
    <div class="max-w-7xl mx-auto space-y-6 mt-16">
      <Addtip/>
    <div class="overflow-x-auto">
      <Category/>
    </div>
      
    <Tips server:defer>
      <div slot="fallback" class="overflow-hidden rounded-lg shadow-sm h-full animate-pulse">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {Array.from({ length: skeletonCount }).map(() => (
            <div class="overflow-hidden border border-gray-200 rounded-lg shadow-sm bg-white h-full animate-pulse">
        <div class="p-5 flex flex-col h-full space-y-4">
          
          <!-- Header (Avatar + Nombre + Fecha + Categoría) -->
          <div class="flex items-center gap-3">
            <div class="h-10 w-80 rounded-full bg-gray-200"></div>
            
            <div class="ml-auto h-5 w-16 bg-gray-200 rounded"></div>
          </div>
      
          <!-- Contenido -->
          <div>
            <div class="h-5 w-3/4 bg-gray-200 rounded mb-2"></div>
            <div class="space-y-1">
              <div class="h-3 w-full bg-gray-200 rounded"></div>
              <div class="h-3 w-5/6 bg-gray-200 rounded"></div>
              <div class="h-3 w-2/3 bg-gray-200 rounded"></div>
            </div>
          </div>
      
          <!-- Footer (Botones de interacción) -->
          <div class="flex justify-between items-center pt-2 border-t border-gray-100 mt-auto">
            <div class="flex gap-4">
              <div class="h-4 w-10 bg-gray-200 rounded"></div>
              <div class="h-4 w-10 bg-gray-200 rounded"></div>
            </div>
            <div class="flex gap-2">
              <div class="h-8 w-8 bg-gray-200 rounded-full"></div>
              <div class="h-8 w-8 bg-gray-200 rounded-full"></div>
            </div>
          </div>
      
        </div>
      </div>
    ))}
    </div>
  </div>
  </Tips>
  
      <div class="mt-8 text-center text-sm text-gray-500">
       </div>
    </div>
  </div>
</Layout>
